@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<p role="status">UPC Code: @upc</p>

<BarcodeScanner OnUPCDetected="GetProductUPC" />

<ul id="barcode-list"></ul>


@code {

    @using BlazorBarCodeScanner.Components
    private string upc;
    private async Task GetProductUPC(string foundUpc)
    {
        upc = foundUpc;
    }
}
